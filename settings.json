
{
    "editor.fontFamily": "MesloLGMDZ Nerd Font",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorTheme": "Gruvbox Dark (Hard)",
    // Controls the font size in pixels.
    "editor.fontSize": 14,
    // The number of spaces a tab is equal to. This setting is overriden based on the file contents when `editor.detectIndentation` is on.
    "editor.tabSize": 2,
    // terminal settings
    "terminal.integrated.fontFamily": "MesloLGMDZ Nerd Font",
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.shell.osx": "/usr/local/bin/zsh",
    "terminal.external.osxExec": "iTerm.app",
    "terminal.explorerKind": "external",
    "workbench.startupEditor": "newUntitledFile",
    "eslint.autoFixOnSave": true,
    "window.zoomLevel": 0,
    "emmet.showExpandedAbbreviation": "never",
    "vim.useSystemClipboard": true,
    "vim.hlsearch": true,
    "vim.leader": ",",
    "vim.useCtrlKeys": true,
    "vim.easymotion": true,
    "vim.statusBarColorControl": true,
    "vim.statusBarColors": {
        "normal": ["#5db2b1", "#ffffff"],
        "insert": "#97c796",
        "visual": "#fc935f",
        "visualline": "#B48EAD",
        "visualblock": "#A3BE8C",
        "replace": "#D08770"
    },
    "cSpell.userWords": [
        "CSRF",
        "Dropzone",
        "Subheader",
        "Truthy",
        "Unfollow",
        "Unmount",
        "commentable",
        "datepicker",
        "datetime",
        "dropdown",
        "followee",
        "followees",
        "followership",
        "gaggleamp",
        "javascripts",
        "keyframes",
        "playsinline",
        "polyfill",
        "pubsub",
        "scroller",
        "skusic",
        "smiley",
        "turbolinks",
        "unvote",
        "urijs",
        "webm",
        "webp",
        "woff"
    ],
    "editor.minimap.enabled": false,
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "editor.lineNumbers": "relative",
    "workbench.sideBar.location": "right",
    "workbench.editor.tabSizing": "shrink",
    "workbench.colorCustomizations": {
        "statusBar.background": "#5db2b1",
        "statusBar.noFolderBackground": "#5db2b1",
        "statusBar.debuggingBackground": "#5db2b1",
        "statusBar.foreground": "#ffffff"
    },
    "eslint.packageManager": "yarn",
}
