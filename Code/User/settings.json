{
    // editor
    "editor.minimap.enabled": false,
    "editor.fontFamily": "MesloLGM Nerd Font",
    "editor.fontSize": 14,
    "editor.lineNumbers": "relative",
    "editor.accessibilitySupport": "off",
    "editor.dragAndDrop": false,
    "editor.fontLigatures": false,
    "editor.tabSize": 2,
    "editor.cursorStyle": "underline",

    // files
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.exclude": {
        "**/.bundle": true
    },
    "files.associations": {
        "*.csvbuilder": "ruby"
    },

    // breadcrumbs
    "breadcrumbs.enabled": true,

    // workbench
    "workbench.colorTheme": "Material Theme",
    "workbench.sideBar.location": "right",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.fontAliasing": "antialiased",
    "workbench.tips.enabled": false,
    "workbench.tree.indent": 14,
    "workbench.editor.enablePreview": false,
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.labelFormat": "default",
    "workbench.settings.editor": "ui",
    "workbench.editor.tabSizing": "shrink",
    "workbench.settings.useSplitJSON": false,
    "workbench.colorCustomizations": {
        "statusBar.foreground": "#ffffff",
        "editorLineNumber.foreground": "#666",
        "editorLineNumber.activeForeground": "#d65d0e"
    },

    // window
    "window.newWindowDimensions": "fullscreen",
    "window.restoreFullscreen": true,
    "window.zoomLevel": 0,

    // theme
    "materialTheme.accent": "Orange",
    "material-icon-theme.folders.theme": "specific",

    // terminal settings
    "terminal.integrated.fontFamily": "MesloLGM Nerd Font",
    "terminal.integrated.fontSize": 14,
    "terminal.external.osxExec": "iTerm.app",
    "terminal.explorerKind": "external",
    "terminal.integrated.cursorStyle": "underline",
    "terminal.integrated.shell.osx": "/usr/local/bin/zsh",
    "terminal.integrated.experimentalRefreshOnResume": true,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.fontWeight": "bold",
    "terminal.integrated.rendererType": "dom",

    // vim
    "vim.useSystemClipboard": true,
    "vim.hlsearch": true,
    "vim.leader": ",",
    "vim.useCtrlKeys": true,
    "vim.easymotion": true,
    "vim.statusBarColorControl": false,
    "vim.visualstar": true,
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before":["<C-n>"],
            "commands": [
                ":nohl",
            ]
        },
        {
            "before": ["leader", "w"],
            "commands": [
                "workbench.action.files.save",
            ]
        },
    ],

    // eslint
    "eslint.autoFixOnSave": true,
    "eslint.packageManager": "yarn",

    // diff editor
    "diffEditor.ignoreTrimWhitespace": false,

    // solargraph
    "solargraph.useBundler": true,
    "solargraph.formatting": true,
    "solargraph.autoformat": true,
    "solargraph.diagnostics": true,
    "solargraph.references": true,
    "solargraph.symbols": true,
    "solargraph.definitions": true,
    "solargraph.rename": true,
    "solargraph.folding": true,

    // ruby
    "ruby.pathToBundler": "/Users/ku5ic/.rbenv/shims/bundle",
    "ruby.interpreter.commandPath": "/Users/ku5ic/.rbenv/shims/ruby",
    "ruby.intellisense": false,

    // npm/yarn
    "npm.packageManager": "yarn",

    // javascript
    "javascript.updateImportsOnFileMove.enabled": "always",

    // emmet
    "emmet.showExpandedAbbreviation": "inMarkupAndStylesheetFilesOnly",

    // html
    "[html]": {
        "editor.defaultFormatter": "HookyQR.beautify"
    },

    // python
    "python.autoComplete.addBrackets": true,
    "python.autoComplete.showAdvancedMembers": false,
    "python.terminal.activateEnvironment": false,
    "[python]": {
        "editor.tabSize": 4
    },
}
